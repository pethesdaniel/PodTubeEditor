<RadzenCard>
    <RadzenStack>
        <RadzenNumeric @bind-Value=@value />
        <RadzenButton Click=@(args => OnDone.InvokeAsync(value)) Text="@Operation" ButtonStyle="ButtonStyle.Primary" />
    </RadzenStack>
</RadzenCard>


@code {
    [Parameter] public EventCallback<int> OnDone { get; set; } = new EventCallback<int>();
    [Parameter] public string Operation { get; set; } = "";
    private int value = 5;
}
