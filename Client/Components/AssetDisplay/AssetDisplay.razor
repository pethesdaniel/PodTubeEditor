@using PodTubeEditor.Shared.Model;
<RadzenCard>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
        @if(Value.Url != null) {
            @if (!Value.IsAudio) {
                <RadzenImage Path="@Value.Url" Style="width: 50px; height: 50px; border-radius: 50%;" />
            }
        }
        <RadzenText TextStyle="TextStyle.Body1"><b>@(Value.Name)</b></RadzenText>
    </RadzenStack>
</RadzenCard>

@code {
    [Parameter] public Asset Value { get; set; }
}
